{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",  // Reactアプリではesnextがおすすめです
      "moduleResolution": "node",  // 明示的にnodeを指定
      "jsx": "react",  // または "react-jsx" (React 17以降の場合)
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }